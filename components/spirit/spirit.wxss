.spirit-container{
  width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.title{
  font-size: 14px;
  font-weight: bold;
  width:40%;
  height: 40px;
  color: #ffffff;
  display: flex;
  justify-content: center;
  border-radius: 80px;
  box-shadow: 0px 5px 22px 0px rgba(255, 105, 26, 0.5285714285714286);
  background-color: rgba(255, 105, 26, 1);
  margin: auto;
  margin-bottom: 30px;
  line-height: 40px;
}


.tools{
  width: 300px;
  display: flex;
  margin-bottom: 50px;
}

button{
  	color: rgba(255, 255, 255, 1);
	  background-color: #27aa80;
	  border-radius: 11px;
	  font-size: 14px;
	  line-height: 30px;
	  text-align: center;
}

.progress{
  height: 10px;
  width: 300px;
  
}